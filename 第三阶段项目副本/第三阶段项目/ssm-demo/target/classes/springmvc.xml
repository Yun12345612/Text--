<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/context
           https://www.springframework.org/schema/context/spring-context.xsd
           http://www.springframework.org/schema/mvc
           https://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <!-- 1. 包扫描：扫描com.cykj下的Controller、Service等组件 -->
    <context:component-scan base-package="com.cykj"/>

    <!-- 2. 拦截器配置（核心修正：mvc:mapping嵌套在mvc:interceptor内） -->
    <mvc:interceptors>
        <mvc:interceptor>
            <!-- 拦截所有/api开头的接口（匹配后端上下文路径） -->
            <mvc:mapping path="/api/**"/>
            <!-- 注册登录拦截器 -->
            <bean class="com.cykj.intercept.LoginIntercept"/>
        </mvc:interceptor>
    </mvc:interceptors>

    <!-- 3. 静态资源映射（根据实际资源位置调整location） -->
    <mvc:resources mapping="/static/**" location="/WEB-INF/static/"/> <!-- 若资源在webapps/static，改为location="/static/" -->
    <mvc:resources mapping="/upload/**" location="file:///C:/img/"/>

    <!-- 4. 注解驱动+消息转换器（解决JSON中文乱码） -->
    <mvc:annotation-driven>
        <mvc:message-converters>
            <bean class="com.alibaba.fastjson.support.spring.FastJsonHttpMessageConverter">
                <property name="supportedMediaTypes">
                    <list>
                        <value>text/html;charset=utf-8</value>
                        <value>application/json;charset=utf-8</value>
                        <value>application/javascript;charset=utf-8</value>
                    </list>
                </property>
            </bean>
        </mvc:message-converters>
    </mvc:annotation-driven>

    <!-- 5. 视图解析器（处理HTML文件） -->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/pages/"/>
        <property name="suffix" value=".html"/>
    </bean>

</beans>